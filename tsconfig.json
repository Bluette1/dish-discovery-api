{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "typeRoots": ["./node_modules/@types", "./src/types/"],
      "skipLibCheck": true,
    },
  
    "include": ["src/**/*.ts", "src/types/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }